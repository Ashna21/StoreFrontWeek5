@model SFData.data.Address

@{ 
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div id="address">
<h2>@ViewBag.Message</h2>

@using (Html.BeginForm("AddAddress", "Orders", new { cartId = Session["cartId"] }, FormMethod.Post, new {@class = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.Address1)
        @Html.TextBoxFor(m=>m.Address1, new { @class = "form-control"})
    </div>
     <div class="form-group">
        @Html.LabelFor(m=>m.Address2)
        @Html.TextBoxFor(m=>m.Address2, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address3)
        @Html.TextBoxFor(m => m.Address3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StateID)
        @Html.TextBoxFor(m => m.StateID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ZipCode)
        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
    </div>
  <div id="add">
    <input  type="submit" class="btn btn-primary" value="Add Address" />
   </div>
}
</div>
